# Environment variables template for jetstream-turbo

# Required Configuration
STREAM_NAME=hydrated_jetstream
TURBO_CREDENTIAL_SECRET=your_credential_secret_here

# Database Configuration
DB_DIR=data_store
REDIS_URL=redis://localhost:6379

# Performance Configuration
TURBO_BATCH_SIZE=10
TURBO_MAX_CONCURRENT=100

# Cache Configuration
TURBO_CACHE_SIZE_USERS=20000
TURBO_CACHE_SIZE_POSTS=20000

# Storage Configuration
S3_BUCKET=graze-turbo-01
S3_REGION=us-east-1

# Server Configuration
HTTP_PORT=8080
RUST_LOG=info

# Graze API Configuration
GRAZE_API_BASE_URL=https://api.graze.social

# Jetstream Configuration
JETSTREAM_HOSTS=["jetstream1.us-east.bsky.network", "jetstream2.us-east.bsky.network", "jetstream1.us-west.bsky.network"]
WANTED_COLLECTIONS=app.bsky.feed.post

# Metrics Configuration
STATSD_HOST=localhost
STATSD_PORT=8125

# Development Mode (uncomment for development)
# RUST_LOG=debug
# TURBO_BATCH_SIZE=1